[user]
	name = "Stefan JÃ¶st"
	email = schlubbi@github.com
[github]
	user = schlubbi
[push]
	default = current
[color]
  ui = auto
[alias]
  ci = commit
  co = checkout
  com = checkout master
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all -v
  pom = push origin master
  purom = pull --rebase origin master
  pur = pull --rebase
  pu = push origin -u $(git b --show-current)
  b = branch
  # Divergence (commits we added and commits remote added)
  div = divergence
  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached
  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  st = status
[merge]
  tool = vimdiff
[core]
  excludesfile = /home/schlubbi/.gitignore
	editor = vim
[pull]
	ff = only
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  plus-color = "#012800"
  minus-color = "#340001"
  syntax-theme = Nord
  line-numbers = true
  side-by-side = true
[interactive]
  diffFilter = delta --color-only
[credential]
        helper = cache
